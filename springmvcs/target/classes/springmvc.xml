<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <context:component-scan base-package="com.sc.spmvc.controller"/>
    <!--
    配置视图解析器
    将返回的视图，自动添加前缀和后缀
    这个类只能解析jsp
    -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/"></property>
        <property name="suffix" value=".jsp"></property>
        <!--<property name="order" value="2"></property>-->
    </bean>
    <!--过滤静态资源 js,css,png-->
    <mvc:default-servlet-handler/>
    <mvc:annotation-driven />
    <mvc:resources mapping="/js/**" location="/resources/js/"/>

    <!--配置文件上传对象-->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
            <property name="defaultEncoding" value="utf-8"></property>
            <property name="maxUploadSize" value="10240000"></property>
    </bean>
    <!-- springmvc拦截器 -->
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <!--设置放行的请求地址 -->
            <mvc:exclude-mapping path="/user/*"/>
            <mvc:exclude-mapping path="/user/register"/>
            <mvc:exclude-mapping path="/user/checkUser"/>
            <!--放行静态资源 -->
            <mvc:exclude-mapping path="/upload/**"/>
            <mvc:exclude-mapping path="/resources/js/**"/>
            <bean id="loginInterceptor" class="com.sc.spmvc.controller.TestFilter"/>
        </mvc:interceptor>
    </mvc:interceptors>
    <!--自定义类型转换器-->
    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <bean class="com.sc.spmvc.until.StringToDateConverter"></bean>
            </set>
        </property>
    </bean>
    <mvc:annotation-driven conversion-service="conversionService"></mvc:annotation-driven>
</beans>
