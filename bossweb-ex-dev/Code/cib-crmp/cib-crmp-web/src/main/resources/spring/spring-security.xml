<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
			 xmlns:beans="http://www.springframework.org/schema/beans"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xmlns:security="http://www.springframework.org/schema/security"
			 xsi:schemaLocation="http://www.springframework.org/schema/beans
             http://www.springframework.org/schema/beans/spring-beans.xsd
             http://www.springframework.org/schema/security
             http://www.springframework.org/schema/security/spring-security.xsd">
	<beans:description>SpringSecurity</beans:description>

	<http pattern="/resources/**/*.*" security="none" />
	<http pattern="/skeleton/**/*.*" security="none" />
	<http pattern="/**/*.jpg" security="none" />
	<http pattern="/**/*.png" security="none" />
	<http pattern="/**/*.gif" security="none" />
	<http pattern="/**/*.css" security="none" />
	<http pattern="/**/*.js" security="none" />
	<http pattern="/rest/*" security="none" />
	<http pattern="/login.html" security="none" />
	<http pattern="/accessdenied.html" security="none" />
	<http pattern="/session_timeout.html" security="none" />
	<http pattern="/page-bar.html" security="none" />
    <http pattern="/error.html" security="none" />
    <http pattern="/fileUpMaxError.html" security="none" />
	<http pattern="/pages/*.*" security="none" />
	<http pattern="/show.html" security="none"/>

	<http use-expressions="true" auto-config="false">

		<headers>
			<frame-options policy="SAMEORIGIN" />
		</headers>
		<form-login login-page="/login.html" username-parameter="username"
			password-parameter="password" login-processing-url="/login"
			authentication-failure-url="/accessdenied.html" default-target-url="/index.html" authentication-details-source-ref="CustomAuthenticationDetailsSource" />
		<logout logout-url="/logout" logout-success-url="/login.html"
			invalidate-session="true" delete-cookies="JSESSIONID" />

		<session-management invalid-session-url="/session_timeout.html">
			<concurrency-control max-sessions="1"
				expired-url="/login.html" />
		</session-management>
		<!--拒绝访问处理程序 -->
		<access-denied-handler ref="accessDeniedHandler" />
		<!--自定义过滤之前 -->
		<custom-filter before="FILTER_SECURITY_INTERCEPTOR"
			ref="ResourceSecurityInterceptorFilter" />
	</http>

	<beans:bean id="ResourceSecurityInterceptorFilter"
		class="com.newland.boss.kpi.security.filter.ResourceSecurityInterceptorFilter">
		<!--身份验证管理器-->
		<beans:property name="authenticationManager" ref="authenticationManager" />
		<!--安全数据来源-->
		<beans:property name="securityMetadataSource" ref="ResourceSecurityMetadataSource" />
		<!--访问决策管理-->
		<beans:property name="accessDecisionManager" ref="ResourceSecurityAccessDecisionManager" />
	</beans:bean>




	<!--用户管理权限-->
	<authentication-manager alias="authenticationManager">
		<authentication-provider ref="CustomerAuthenticationProvider" />
	</authentication-manager>

	<beans:bean id="CustomerAuthenticationProvider"
		class="com.newland.boss.kpi.security.auth.provider.CustomerAuthenticationProvider">
		<beans:property name="userDetailsService" ref="UserDetailsServiceImpl" />
	</beans:bean>

	<beans:bean id="UserDetailsServiceImpl"
		class="com.newland.boss.kpi.security.auth.provider.UserDetailsServiceImpl" />
<!--资源管理权限 -->
	<beans:bean id="ResourceSecurityMetadataSource"
		class="com.newland.boss.kpi.security.intercept.ResourceSecurityMetadataSource" />
	<beans:bean id="ResourceSecurityAccessDecisionManager"
		class="com.newland.boss.kpi.security.intercept.ResourceSecurityAccessDecisionManager" />

	<!--登陆认证细节参考来源-->
	<beans:bean id="CustomAuthenticationDetailsSource"
		class="com.newland.boss.kpi.security.auth.provider.CustomAuthenticationDetailsSource" />
	
	<beans:bean id="accessDeniedHandler"
		class="com.newland.boss.kpi.security.access.AccessDeniedHandlerImpl">
		<beans:property name="errorPage" value="/accessdenied.html" />
	</beans:bean>
</beans:beans>


        
       
    