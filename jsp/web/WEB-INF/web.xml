<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--servlet配置
    http://localhost:8080/jsp/servlet请求地址
    servlet-name:指定一个servlet名称  用于关联servlet标签和Servlet-mapping标签
    所以两者name必须一致
    servlet-class:配置servlet类的路径  全路径
    url-pattern：servlet请求地址
    -->
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>servlet.TestServlet</servlet-class>
        <!--配置初始化参数-->
        <init-param>
            <param-name>charSet</param-name>
            <param-value>utf-8</param-value>
        </init-param>
        <!--配置servlet在服务器启动时进行实例化初始化
        值配置为正数 1-5  值越小优先级越高
        -->
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>userTest</servlet-name>
        <servlet-class>servlet.UserServlet</servlet-class>
        <init-param>
            <param-name>charset</param-name>
            <param-value>text/html;charset=utf-8</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userTest</servlet-name>
        <url-pattern>/user.jsp</url-pattern>
    </servlet-mapping>
        <listener>
            <listener-class>listener.TestListener</listener-class>
        </listener>
</web-app>