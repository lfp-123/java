<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.seecee.sc1911.pojo.HUser" table="H_USER" schema="ADMIN">
        <!--配置二级缓存额级别 只读 -->
        <cache usage="nonstrict-read-write"></cache>
        <id name="id" column="ID">
            <generator class="native">
            <param name="sequence_name">id_seq</param>
        </generator>

        </id>
        <property name="username" column="USERNAME"/>
        <property name="password" column="PASSWORD"/>
        <property name="createtime" column="CREATETIME"/>
        <!-- 多对一
        name ：配置关系的属性名
        class： 属性对应的关系
        column:描述关系对象的外键
        lazy :设置延迟加载，默认开启状态 设置lalse表示关闭
        fetch：select单独发起一个查询
        join-表示执行表关联查询 延迟加载失效
         -->
         <many-to-one name="dept" class="com.seecee.sc1911.pojo.HDept" fetch="join" lazy="false" column="D_ID"></many-to-one>
        <!--
        主表要加级联 而且级联操作 需要所有操作
        加cascade = all
        -->
        <one-to-one name="info" class="com.seecee.sc1911.pojo.HUserinfo" cascade="all"></one-to-one>
    </class>
</hibernate-mapping>